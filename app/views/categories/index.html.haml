.user_details.clearfix
  %h3 Listing Categories
  %input.blue_btn.frd{type: "submit", value: "Submit"}/
  .selectbox.blueselect.frd
    %select.select1
      %option Select Action
      %option Delete
      %option Change status
  %label.actionlabel Actions
#accordion.tablerow.clearfix
  %table.tablelist{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
    %tr
      %th{align: "left", valign: "middle"}  
      %th{align: "left", valign: "middle"} Sr. No.
      %th{align: "left", valign: "middle"} Name
      %th{align: "left", valign: "middle"} Status
      %th{align: "left", valign: "middle"}
      %th{align: "left", valign: "middle"}
    - @count=0
    - @categories.each do |category|
      %tr
        %td{align: "left", valign: "middle"}
          %input.checkbox{type: "checkbox"}/
        %td{align: "left", valign: "middle"}= @count += 1
        %td{align: "left", valign: "middle"}= category.name
        %td{align: "left", valign: "middle"}= category.isactive
        %td{align: "left", valign: "middle"}= link_to 'Show', category
        %td{align: "left", valign: "middle"}= link_to 'Edit', edit_category_path(category)

  %br
  = link_to 'New Category', new_category_path, :class=>'blue_btn'